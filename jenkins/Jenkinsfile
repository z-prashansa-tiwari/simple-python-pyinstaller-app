pipeline {
    agent any
    stages {
        stage('switch to ubuntu@35.91.231.147') {
            steps {
                sh 'ssh ubunutu@235.91.231.147'
            }
        }
        stage('Clone Repo') {
            steps {
                sh 'git clone https://github.com/z-prashansa-tiwari/simple-python-pyinstaller-app'
                echo 'Clone successfull'
            }
        }
        stage('Build') {
            steps {
                sh 'python3 -m py_compile sources/add2vals.py sources/calc.py'
            }
        }
        stage('Test') {
            steps {
                sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh 'pyinstaller --onefile sources/add2vals.py'
            }
            post {
                success {
                    archiveArtifacts 'dist/add2vals'
                }
            }
        }
    }
}
